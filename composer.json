{
    "name": "aristech/nimbasms",
    "description": "Laravel package for Nimba SMS API",
    "autoload": {
        "psr-4": {
            "Aristech\\NimbaSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aristech\\NimbaSms\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "ArisTech",
            "email": "aristechdev@gmail.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Aristech\\NimbaSms\\Providers\\NimbaSmsServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-main": "1.0"
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0",
        "mockery/mockery": "^1.5",
        "guzzlehttp/guzzle": "^7.8"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "@php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html coverage"
    }
}
